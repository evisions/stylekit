/*******************************
         Theme Overrides
*******************************/
@font-face {
  font-family: 'Accordion';
  src:
    url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype'),
    url(data:application/font-woff;charset=utf-8;base64,) format('woff')
  ;
  font-weight: normal;
  font-style: normal;
}

/* Dropdown Icon */
.ui.accordion .title .dropdown.icon,
.ui.accordion .accordion .title .dropdown.icon {
  font-family: Accordion;
  line-height: 1;
  backface-visibility: hidden;
  font-weight: normal;
  font-style: normal;
  text-align: center;
}

.ui.accordion .title .dropdown.icon:before,
.ui.accordion .accordion .title .dropdown.icon:before {
  content: '\f0da'/*rtl:'\f0d9'*/;
}

/*--------------
     Tree
---------------*/

.ui.tree.accordion {
  width: @styledWidth;
}

.ui.tree.accordion:not(.styled) .title ~ .content:not(.ui),
.ui.tree.accordion:not(.styled) .accordion .title ~ .content:not(.ui) {
  padding-left: 1em;
}

.ui.tree.accordion .title .dropdown.icon,
.ui.tree.accordion .accordion .title .dropdown.icon {
  float: right;
}

/* Content */
.ui.tree.styled.accordion .content,
.ui.tree.styled.accordion .accordion .content {
  margin: @styledContentMargin;
  padding: 0px;
}

.ui.tree.styled.accordion .title,
.ui.tree.styled.accordion .accordion .title {
  border-top: 0px;
}

.ui.tree.styled.accordion .node {
  border-top: @styledTitleBorder;
}
.ui.tree.styled.accordion > .node:first-child {
  border-top: 0px;
}

.ui.tree.styled.accordion .node.selected > .title {
  background: @lightBlue;
  color: @styledActiveTitleColor;
}

.ui.accordion .title:not(.ui) > a {
  // make sure links do not mess up the style
  color: @titleColor;
  font-family: @titleFont;
  font-size: @titleFontSize;
  text-decoration: none;
}
.ui.inverted.accordion .title:not(.ui) > a {
  color: @invertedTitleColor;
}
/*******************************
      Instant Notifications
*******************************/
/* Notifications */
@notificationsMarginRight: -(@notificationWidth / 2);

/* Notification */
@notificationBackgroundColor: @black;
@notificationBoxShadow: 0 1px 2px 0 rgba(0, 0, 0, 0.15);
@notificationWidth: 275px;
@notificationPadding: 1em;
@notificationMarginLeft: ~"calc(100% - "@notificationWidth~")";

@notificationFontSize: @fontSize;
@notificationTextColor: @white;
